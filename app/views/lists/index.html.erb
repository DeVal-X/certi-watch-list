<div class="container">
  <div class="lists-list">
    <% @lists.each do |list| %>
      <div class="item-list">
        <%= link_to list_path(list) do %>
          <h3><%= list.name %></h3>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="list-addition">
    <%= link_to "+ New List", new_list_path %>
  </div>
</div>
